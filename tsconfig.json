{
  "compilerOptions": {
    // Base options
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "incremental": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": false,

    // For Node.js
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,

    "lib": ["ES2022"],

    // Paths
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },

    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "eslint.config.mjs",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
